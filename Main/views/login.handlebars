<body style="background-image: url('https://images.unsplash.com/photo-1546484396-fb3fc6f95f98?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
<div class="row auth-container">
  <div class="col-md-6 login-container">
    <h2>LoginğŸœï¸</h2>
    <form class="form login-form" action="/login" method="POST">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" name="email" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" name="password" />
      </div>
      <div class="form-group">
        <button class="login-btn btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  
  <div class="col-md-6 signup-container">
    <h2>Create AccountğŸŒ„</h2>
    <form class="form signup-form" method="POST" action="/signup">
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" name="email" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" name="password" />
      </div>
      <div class="form-group">
        <button class="signup-btn btn btn-primary" type="submit">Create Account</button>
      </div>
    </form>
  </div>
</div>
</body>
<script src="/js/login.js"></script>