<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form" method="POST" action="/login">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" name="email" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" name="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  
  <div class="col-md-6">
    <h2>Create Account</h2>
    <form class="form signup-form" method="POST" action="/signup">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" name="name" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" name="email" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" name="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create Account</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
